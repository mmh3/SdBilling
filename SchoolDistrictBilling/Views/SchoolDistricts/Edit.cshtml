@model SchoolDistrictBilling.Models.SchoolDistrictView

@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <h4>Edit School District</h4>
</div>
<hr />
<form asp-action="Edit" runat="server">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="SchoolDistrict.SchoolDistrictUid" />

    <div class="row form-group">
        <label asp-for="SchoolDistrict.Name" class="col-md-1 control-label"></label>
        <div class="col-md-4">
            <input asp-for="SchoolDistrict.Name" class="form-control" />
            <span asp-validation-for="SchoolDistrict.Name" class="text-danger"></span>
        </div>

        <label asp-for="SchoolDistrict.Aun" class="col-md-1 control-label"></label>
        <div class="col-md-4">
            <input asp-for="SchoolDistrict.Aun" class="form-control" />
            <span asp-validation-for="SchoolDistrict.Aun" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="SchoolDistrict.AddressStreet" class="col-md-1 control-label"></label>
        <div class="col-md-5">
            <input asp-for="SchoolDistrict.AddressStreet" class="form-control" />
            <span asp-validation-for="SchoolDistrict.AddressStreet" class="text-danger"></span>
        </div>

        <label asp-for="SchoolDistrict.Phone" class="col-md-1 control-label"></label>
        <div class="col-md-2">
            <input asp-for="SchoolDistrict.Phone" class="form-control" />
            <span asp-validation-for="SchoolDistrict.Phone" class="text-danger"></span>
        </div>
    </div>

    <div class="row form-group">
        <label asp-for="SchoolDistrict.AddressCity" class="col-md-1 control-label"></label>
        <div class="col-md-3">
            <input asp-for="SchoolDistrict.AddressCity" class="form-control" />
            <span asp-validation-for="SchoolDistrict.AddressCity" class="text-danger"></span>
        </div>

        <label asp-for="SchoolDistrict.AddressState" class="col-md-1 control-label"></label>
        <div class="col-md-1">
            <input asp-for="SchoolDistrict.AddressState" class="form-control" />
            <span asp-validation-for="SchoolDistrict.AddressState" class="text-danger"></span>
        </div>

        <label asp-for="SchoolDistrict.AddressZip" class="col-md-1 control-label"></label>
        <div class="col-md-2">
            <input asp-for="SchoolDistrict.AddressZip" class="form-control" />
            <span asp-validation-for="SchoolDistrict.AddressZip" class="text-danger"></span>
        </div>

        <label asp-for="SchoolDistrict.County" class="col-md-1 control-label"></label>
        <div class="col-md-2">
            <input asp-for="SchoolDistrict.County" class="form-control" />
            <span asp-validation-for="SchoolDistrict.County" class="text-danger"></span>
        </div>
    </div>

    <hr />
    <div class="row">
        <h4>Contacts</h4>
        <span style="width:50px;display:inline-block"></span>
        <h4><a asp-action="CreateContact" asp-route-id="@Model.SchoolDistrict.SchoolDistrictUid" class="link">Add</a></h4>
    </div>

    @for (var i = 0; i < Model.Contacts.Count(); i++)
    {
        <div class="form-group">
            <div class="row">

                <input type="hidden" asp-for="@Model.Contacts[i].SchoolDistrictUid" />
                <input type="hidden" asp-for="@Model.Contacts[i].SchoolDistrictContactUid" />

                <div class="col-md-3">
                    <label asp-for="@Model.Contacts[i].Name" class="control-label"></label>
                    <input asp-for="@Model.Contacts[i].Name" class="form-control" />
                    <span asp-validation-for="@Model.Contacts[i].Name" class="text-danger"></span>
                </div>

                <div class="col-md-3">
                    <label asp-for="@Model.Contacts[i].Email" class="control-label"></label>
                    <input asp-for="@Model.Contacts[i].Email" class="form-control" />
                    <span asp-validation-for="@Model.Contacts[i].Email" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label asp-for="@Model.Contacts[i].Phone" class="control-label"></label>
                    <input asp-for="@Model.Contacts[i].Phone" class="form-control" />
                    <span asp-validation-for="@Model.Contacts[i].Phone" class="text-danger"></span>
                </div>

                <div class="col-sm-1">
                    <label asp-for="@Model.Contacts[i].PrimaryFlag" class="control-label"></label>
                    <input asp-for="@Model.Contacts[i].PrimaryFlag" class="form-control" />
                    <span asp-validation-for="@Model.Contacts[i].PrimaryFlag" class="text-danger"></span>
                </div>
            </div>
        </div>
    }

    <br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
